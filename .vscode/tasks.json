{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "problemMatcher": "$gcc", 
    "tasks": [
        {
            "type": "shell",
            "label": "test",
            "command": "./a",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++ build widget.cpp",
            "command": "g++",
            "args": [
                "widget.cpp",
                "src/*.cpp",
                "-Wshadow",
                "-Wall",
                "-std=c++11",
                "-I", "include",
                "-l", "graphics",
                "-l", "SDL",
                "-l", "SDL_ttf"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "g++",
            "args": [
                "${file}",
                "-std=c++0x",
                "-L", "./lib",
                "-I", "./include",
                "-l", "controls",
                "-l", "graphics",
                "-l", "SDL",
                "-l", "SDL_ttf"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "g++ build for debug",
            "command": "g++",
            "args": [
                "-g", 
                "widget.cpp",
                "src/*.cpp",
                "-I", "include",
                "-l", "graphics",
                "-l", "SDL",
                "-l", "SDL_ttf"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "g++ precompile header",
            "command": "g++",
            "args": [
                "-c", "${file}",
                "-std=c++0x",
                "-L", "./lib",
                "-I", "./include",
                "-l", "controls",
                "-l", "graphics",
                "-l", "SDL",
                "-l", "SDL_ttf"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "g++ build .o file",
            "command": "g++",
            "args": [
                "-c", "${file}",
                "-o", "./obj/${fileBasenameNoExtension}.o",
                "-std=c++0x",
                "-Wall",
                "-L", "./lib",
                "-I", "./include",
                "-l", "controls",
                "-l", "graphics",
                "-l", "SDL",
                "-l", "SDL_ttf"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "create static library",
            "command": "ar",
            "args": [
                "rvs",
                "./lib/lib${fileBasenameNoExtension}.a",
                "${file}"
            ],
            "group": "build"
        },
    ]
}