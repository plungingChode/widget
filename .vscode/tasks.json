{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "test",
            "command": "a.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "g++",
            "args": [
                "${file}",
                "-std=c++0x",
                "-L", "${cwd}/lib",
                "-I", "${cwd}",
                "-I", "${cwd}/include",
                "-l", "graphics",
                "-l", "Controls",
                "-l", "graphicsd",
                "-l", "SDL",
                "-l", "SDLmain",
                "-l", "sdl_ttf"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++ build for debug",
            "command": "g++",
            "args": [
                "-g", 
                "${file}",
                "-std=c++0x",
                "-L", "${cwd}/lib",
                "-I", "${cwd}",
                "-I", "${cwd}/include",
                "-l", "graphics",
                "-l", "graphicsd",
                "-l", "SDL",
                "-l", "SDLmain",
                "-l", "sdl_ttf"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}